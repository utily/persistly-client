{
  "name": "@utily/library-template",
  "version": "0.0.4",
  "description": "Template library for Typescript.",
  "author": "Utily Contributors",
  "license": "MIT",
  "repository": "https://github.com/utily/library-template",
  "bugs": {
    "url": "https://github.com/utily/library-template/issues"
  },
  "homepage": "https://github.com/utily",
  "private": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "git": {
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely|persistly-model|cloudly-http|cloudly-router)/.*)"
    ],
    "testEnvironment": "node",
    "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "scripts": {
    "dev": "watch 'npm run build' .",
    "lint": "eslint '**/*.{ts,tsx}'",
    "fix": "eslint '**/*.{ts,tsx}' --fix",
    "build": "tsc -p .",
    "test": "jest --maxWorkers=2",
    "test:watch": "watch jest",
    "prepare": "npm run build",
    "clean": "rimraf dist node_modules coverage"
  },
  "dependencies": {
    "cloudly-http": "0.0.50",
    "cloudly-router": "0.0.24",
    "gracely": "0.1.8",
    "persistly-model": "0.0.11"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "eslint": "8.1.0",
    "eslint-plugin-prettierx": "github:nilssonemma/eslint-plugin-prettierx#master",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.3.1",
    "prettierx": "github:simonmika/prettierx#newline-before-clause",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "watch": "^0.13.0"
  }
}
