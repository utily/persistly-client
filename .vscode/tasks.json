{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
			{
				"label": "build",
				"type": "npm",
				"script": "build",
				"group": {
					"kind": "build",
					"isDefault": true
				},
				"problemMatcher": [
					"$tslint5",
					"$tsc"
				]
			},
			{
				"type": "npm",
				"script": "lint",
				"problemMatcher": [
					"$tslint5"
				]
			}
		]
}
